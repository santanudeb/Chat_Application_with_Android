<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".HomePageActivity"
    android:background="@drawable/bg8"
     >

    <TextView
        android:id="@+id/tvhello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:text="Chit Chat"
        android:textStyle="bold|italic"
        android:textColor="#f08080"
        android:textSize="55sp"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/tvclick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_log"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="17dp"
        android:text="Already registered click here"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#18a682"
        android:textStyle="bold|italic" />
        
       

    <Button
        android:id="@+id/btnsign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvclick"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="17dp"
        android:text="Sign up"
        android:textColor="#9ca88e"
        android:textStyle="bold|italic" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView1"
        android:layout_alignLeft="@+id/tvclick"
        android:layout_alignRight="@+id/btnsign"
        android:layout_below="@+id/tvwellcome">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="216dp"
            android:layout_height="wrap_content"
            android:src="@drawable/pic2" />

   </LinearLayout>

    <TextView
        android:id="@+id/tvwellcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvhello"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:text="Welcome to a new environment"
        android:textColor="#f08080"
        android:textSize="20sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnsign"
        android:layout_alignRight="@+id/tvwellcome"
        android:text="If you don&apos;t have account plese sign up"
        android:textColor="#18a682"
        android:textSize="15sp"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/btn_log"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        android:text="Registered user"
        android:textColor="#9ca88e"
        android:textStyle="bold|italic" />

</RelativeLayout>